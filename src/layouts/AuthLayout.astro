---
import { PROJECT_SETTINGS } from "@lib/constants";
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{ PROJECT_SETTINGS.PROJECT_NAME }</title>
	</head>
	<body class=`bg-[url(/WebbApp.png)]`>
		<main class="h-screen w-screen lg:flex lg:justify-between">
			<section class="lg:w-2/3 h-full text-white">
				<slot />
			</section>
			<section class="w-full text-white hidden lg:block">
			</section>
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
